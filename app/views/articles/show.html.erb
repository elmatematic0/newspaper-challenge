<div class="pure-g">
  <div class="pure-u-1-3">
    <h1><%= @article['title'] %> (View)</h1>
    
    <p><b>Date:</b> <%= @article['date'].to_s[4...6] %>/<%= @article['date'].to_s[6...8] %>/<%= @article['date'].to_s[0...4] %></p>
    <p><b>OCR Text:</b> <%= @article['ocr_eng'] %> </p>
  
    <!-- <h2><%=@article['city']%>, <%=@article['state'] %></h2> -->
    <!-- Params ID: <%= "#{params[:id]}" %><br> -->
   
      
