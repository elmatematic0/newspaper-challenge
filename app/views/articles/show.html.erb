    http://chroniclingamerica.loc.gov<%= @article['url_id']%>#<%= @article['words'] %>
    <embed height="1000px" width="100%"src="http://chroniclingamerica.loc.gov<%= @article['url_id']%>#&words=<%= @article['words'] %>">
  </div>
  </div>




